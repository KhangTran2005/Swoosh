<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="36dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".ui.on_boarding.OBPageFragment">

    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="148dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/ob_img_container"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/obpage_img"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_dashboard_ob"
            />

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/obpage_text_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:layout_marginTop="52dp"
        android:fontFamily="@font/nunito_extrabold"
        android:textAlignment="center"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="8dp"
        android:textColor="?attr/colorOnBackground"
        android:textSize="36sp"
        />

    <TextView
        android:id="@+id/obpage_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginHorizontal="12dp"
        android:text="To this very cool app lmao xd 69 420 blaze it"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="?attr/colorOnBackground"
        android:alpha="0.6"
        android:textSize="16sp"
        />

</LinearLayout>