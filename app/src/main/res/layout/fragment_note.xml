<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="2dp"
        app:cardCornerRadius="8dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            tools:context=".ui.todolist.TodolistFragment">

            <TextView
                android:id="@+id/noteCol_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comfy Reading"
                android:layout_marginVertical="24dp"
                android:fontFamily="@font/poppins_bold"
                android:textSize="26sp"
                android:textColor="?attr/colorOnBackground"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/note_recycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="4dp"
                android:layout_marginVertical="12dp"
                />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/add_note_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:layout_marginHorizontal="56dp"
        android:backgroundTint="?attr/colorAccent"
        app:cardCornerRadius="16dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_toLeftOf="@id/add_task_tv"
                android:layout_centerVertical="true"
                android:layout_marginRight="24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_add_small"
                app:tint="@color/orange_700" />
            <TextView
                android:id="@+id/add_task_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nunito_bold"
                android:drawablePadding="24dp"
                android:textSize="16sp"
                android:textColor="@color/orange_700"
                android:text="Add a New Note"
                />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>