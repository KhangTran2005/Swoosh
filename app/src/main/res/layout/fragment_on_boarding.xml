<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ob_container"
    tools:context=".ui.on_boarding.OnBoarding">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/on_boarding_dot_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/previous_obpage_btn"
        android:layout_toLeftOf="@id/next_obpage_btn"
        android:layout_alignBottom="@id/previous_obpage_btn"
        app:tabIndicator="@drawable/selected_dot_ob"
        app:tabIndicatorGravity="center"
        app:tabIndicatorColor="@color/cyan_200"
        app:tabRippleColor="@android:color/transparent"
        app:tabPadding="2dp"
        app:tabBackground="@drawable/default_dot_ob"
        app:tabGravity="center"
        app:tabIndicatorHeight="4dp"
        />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/on_boarding_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_semibold"
        android:padding="12dp"
        android:textColor="?attr/colorOnPrimary"
        android:background="@drawable/button_type_1"
        android:id="@+id/previous_obpage_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="24dp"
        android:src="@drawable/ic_baseline_arrow_back_ios_new_24"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="?attr/colorOnPrimary"
        android:background="@drawable/button_type_1"
        android:src="@drawable/ic_baseline_arrow_forward_ios_24"
        android:id="@+id/next_obpage_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:textAllCaps="false"
        android:textSize="16sp"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="?attr/colorPrimary"
        android:layout_centerInParent="true"
        android:id="@+id/continue_ob_btn"
        android:clickable="true"
        android:elevation="6dp"
        android:visibility="invisible"
        app:cardCornerRadius="25dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Continue to App"
            android:fontFamily="@font/nunito_bold"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="24sp"
            android:paddingVertical="16dp"
            android:paddingHorizontal="32dp"
            />
    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>