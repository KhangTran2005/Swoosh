<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".ui.register.Register">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/muli_black"
        android:text="@string/app_name"
        android:textColor="?attr/colorPrimary"
        android:textSize="60sp"/>

    <EditText
        android:id="@+id/register_name_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textAutoComplete"
        android:ems="10"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/nunito"
        android:background="@drawable/selection_highlight"
        android:hint="Name"
        android:drawableStart="@drawable/person_drawable"
        android:drawablePadding="12dp"
        />

    <EditText
        android:id="@+id/register_email_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:fontFamily="@font/nunito"
        android:background="@drawable/selection_highlight"
        android:hint="@string/email_hint"
        android:drawableStart="@drawable/email_drawable"
        android:drawablePadding="12dp"
        />

    <EditText
        android:id="@+id/register_password_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        android:ems="10"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        android:fontFamily="@font/nunito"
        android:background="@drawable/selection_highlight"
        android:hint="@string/password_hint"
        android:drawableStart="@drawable/lock_drawable"
        android:drawablePadding="12dp"
        />

    <EditText
        android:id="@+id/register_pass_confirm_et"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:inputType="textPassword"
        android:ems="10"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textSize="14sp"
        android:fontFamily="@font/nunito"
        android:background="@drawable/selection_highlight"
        android:hint="@string/confirm_password_hint"
        android:drawableStart="@drawable/lock_drawable"
        android:drawablePadding="12dp"
        />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="175dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/button_type_1"
        android:text="Register"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:fontFamily="@font/nunito_bold"
        />

</LinearLayout>